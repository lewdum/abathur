{
    "manifest_version": 2,
    "name": "Abathur",
    "version": "1.2.1",
    "description": "Que ADHD da porra!",
    "icons": {
        "32": "icons/alien32.png",
        "64": "icons/alien64.png"
    },
    "browser_action": {
        "default_icon": {
            "32": "icons/alien32.png",
            "64": "icons/alien64.png"
        }
    },
    "background": {
        "scripts": [
            "script.js"
        ]
    },
    "options_ui": {
        "browser_style": false,
        "open_in_tab": true,
        "page": "config.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "abathur@lord.com"
        }
    },
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage",
        "downloads"
    ]
}